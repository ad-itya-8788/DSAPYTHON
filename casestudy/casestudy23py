import numpy as np
import seaborn as sea

df=sea.load_dataset('tips')

print("Total Revenu For each Customer:")

df['revenu']=df['total_bill']+df['tip']
print("Total Revenu For Each Customer:")
print(df['revenu'])

avg_revenu=df.groupby('day')['revenu'].mean()
print("Average Revenu  per Day:")
print(avg_revenu)